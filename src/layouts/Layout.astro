---
// src/layouts/Layout.astro - Clean layout for HTMLShare
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import WebVitals from '../components/WebVitals.astro';

export interface Props {
  title: string;
// ... (existing props)
}

const {
  title,
  description = "HTMLShare 是一个轻量级的在线 HTML 编辑器和分享工具。支持实时预览，一键生成分享链接，适合前端开发者快速测试和分享代码片段。",
  keywords = "HTML编辑器, 在线代码运行, HTML分享, 前端开发工具, 实时预览",
  ogImage = "https://htmlshare.top/og-image.png",
  ogUrl = "https://htmlshare.top/",
  ogType = "website"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />

  <link rel="canonical" href={ogUrl} />

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-LPWX3PFBWB"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-LPWX3PFBWB');
  </script>

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "HTMLShare",
      "url": "https://htmlshare.top/",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://htmlshare.top/?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "HTMLShare",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "Web",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "description": "A simple, fast HTML sharing tool built with Astro and Cloudflare."
    }
  </script>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={ogUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:image:alt" content="HTMLShare - 极简代码分享工具" />
  <meta property="og:site_name" content="HTMLShare" />
  <meta property="og:locale" content="zh_CN" />

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@htmlshare" />
  <meta name="twitter:creator" content="@spsz831" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
  <meta name="twitter:image:alt" content="HTMLShare - 极简代码分享工具" />

  <!-- Additional SEO Meta Tags -->
  <meta name="baidu-site-verification" content="codeva-0Vl8NhZ3iq" />
  <meta name="robots" content="index, follow" />
  <meta name="author" content="spsz831" />
  <meta name="theme-color" content="#3b82f6" />

  <!-- Favicon and App Icons -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="manifest" href="/site.webmanifest" />

  <meta name="generator" content={Astro.generator} />

  <title>{title}</title>
  
  <style>
    /* Theme Variables */
    :root {
      --bg-primary: #ffffff;
      --bg-secondary: #f8fafc;
      --bg-card: #ffffff;
      --text-primary: #1f2937;
      --text-secondary: #6b7280;
      --border-color: #e5e7eb;
      --accent-color: #3b82f6;
      --accent-hover: #2563eb;
    }

    [data-theme="dark"] {
      --bg-primary: #0f172a;
      --bg-secondary: #1e293b;
      --bg-card: #1e293b;
      --text-primary: #f1f5f9;
      --text-secondary: #94a3b8;
      --border-color: #334155;
      --accent-color: #60a5fa;
      --accent-hover: #3b82f6;
    }

    /* Critical CSS for above-the-fold content */
    html {
      font-family: 'Inter', system-ui, sans-serif;
    }

    body {
      margin: 0;
      line-height: 1.6;
      color: #1f2937;
      background: #ffffff;
    }

    * {
      box-sizing: border-box;
      transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #f1f5f9;
    }

    ::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #94a3b8;
    }

    /* Focus styles */
    *:focus {
      outline: 2px solid #3b82f6;
      outline-offset: 2px;
    }

    /* Animation utilities */
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .animate-spin {
      animation: spin 1s linear infinite;
    }
  </style>
</head>

<body>
  <slot />
  <WebVitals />
</body>
</html>